<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.scala.lut.csensing.About"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="How to Use?"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/how1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_gravity="start"
        android:layout_marginTop="37dp"
        android:padding="10px"
        android:text="01. Connect the Bluetooth clicker with your Mobile's Bluetooth."
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/how2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/how1"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:padding="10px"
        android:text="02. Open Citizen Sensing Application."
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/how3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/how4"
        android:layout_below="@+id/how2"
        android:layout_gravity="start"
        android:layout_marginTop="18dp"
        android:padding="10px"
        android:text="03. Register your device with a device name that you can easily remember."
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/how4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/how3"
        android:layout_gravity="start"
        android:layout_marginTop="27dp"
        android:padding="10px"
        android:text="04. Press the button on clicker and allow location permissions."
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/how5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/how4"
        android:layout_marginTop="33dp"
        android:padding="10px"
        android:text="05. Select appropriate issue type to be reported."
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/how6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/how5"
        android:layout_marginTop="27dp"
        android:padding="10px"
        android:text="06. Press again to report an issue."
        android:textColor="#000"
        android:textSize="18sp" />
</RelativeLayout>